@{
	ViewBag.Title = "New";
}

<div id="containershow">
	<nav>
		<a class="navlink" href="/Teacher/List">Back To Teachers</a>
	</nav>

	<h2>New Teacher</h2>
	
    <form name="myForm" action="/Teacher/Create" method="POST" onsubmit="return ValidateTeacher()">

        <div class="inputrow">

            <label for="TeacherFName">First Name:</label>
            <input type="text" name="TeacherFName" id="TeacherFName" />

        </div>

        <div class="inputrow">

            <label for="TeacherLName">Last Name: </label>
            <input type="text" name="TeacherLName" id="TeacherLName" />

        </div>

        <div class="inputrow">

            <label for="EmployeeNumber">Employee Number: </label>
            <input type="text" name="EmployeeNumber" id="EmployeeNumber" />

        </div>

        <div class="inputrow">

            <label for="Salary">Salary: </label>
            <input type="text" name="Salary" id="Salary" />

        </div>

        <div class="inputrow">

            <input type="submit" value="Create Teacher" />

        </div>
        <div id="ErrorBox" style="display:none;"></div>



    </form>
	
</div>

<script>

    window.onload = function () {

        var formHandle = document.forms.myForm;
        console.log(formHandle);

        formHandle.onsubmit = processForm;

        function processForm() {

            var teacherfname = document.getElementById("TeacherFname");
            var teacherlname = document.getElementById("TeacherLname");
            var employeenumber = document.getElementById("EmployeeNumber");
            var salary = document.getElementById("Salary");

            if (teacherfname === "" || teacherfname === null) {
                return false;

            } else if (teacherlname === "" || teacherlname === null) {
                return false;

            } else if (employeenumber === '' || employeenumber === null) {
                return false;

            } else if (salary === '' || salary === null) {
                return false;

            } else {
                return true;
            }

            

        }

    }




</script>
